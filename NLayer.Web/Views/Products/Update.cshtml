
@{
    ViewData["Title"] = "UpdateAsync";
}
@model ProductDTO
<h1>Update</h1>

<div class="row">

    <div class="col-md-6">

        <form asp-action="Update" method="post" asp-controller="Products">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">

                <label asp-for="Stock"></label>
                <input asp-for="Stock " class="form-control" />
                <span asp-validation-for="Stock"></span>

            </div>

            <div class="form-group">
                <label asp-for="Price" ></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control"></select>
                <span asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-danger" value="update" type="submit" />
            </div>


        </form>

    </div>

</div>

