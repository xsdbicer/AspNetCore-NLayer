

@{
    ViewData["Title"] = "Index";
}
@model List<ProductWithCategoryDTO>
<div class="btn btn-warning" >
    <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Save">Add New Product</a>
</div>
<table class="table table-striped">

    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Category</td>
            <td>CreatedDate</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Category.Name</td>
                <td>@item.CreatedDate</td>
                <td><a class=" btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                <td><a class=" btn btn-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

            </tr>
        }
    </tbody>


</table>

