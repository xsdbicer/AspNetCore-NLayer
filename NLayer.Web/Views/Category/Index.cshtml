
@{
    ViewData["Title"] = "Index";
}
@model List<CategoryDTO>
<div class="btn btn-warning">
    <a class ="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Save">Add New Category</a>
</div>

<table class="table table-striped">

    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Created Date</td>
            <td>Update</td>
            <td>Delete</td>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
               <td>@item.CreatedDate</td>
                <td><a class=" btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                <td><a class=" btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

            </tr>
        }
    </tbody>


</table>
